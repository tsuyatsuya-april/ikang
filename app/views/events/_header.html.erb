<header class="header">
  <div class="header__bar row">
    <div class="title">
      <%= link_to root_path, class: "header-link" do %>
        <h3 class="grid-7" >
          <span id="sub-title-main">何だか今日も</span><span id="title-main">いい幹事〜</span>⭐️
        </h3>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="grid-6">
        <%= current_user.nickname %>
        <%= link_to "イベント登録", new_event_path, class: "post header-link" %>
        <%= link_to "ログアウト", destroy_user_session_path, class:"header-link", method: :delete %>
      </div>
    <% else %>
      <div class="grid-6">
        <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %>
        <%= link_to "ログイン", new_user_session_path, class: "post header-link"%>
        <%= link_to "新規登録", new_user_registration_path, class: "post header-link" %>
      </div>
    <% end %>
  </div>
</header>