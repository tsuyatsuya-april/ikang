<%= render "header" %>
<div id="main-box">
  <h3 id="event-title">イベント登録</h3>
  <%= form_for @event, local: true do |f| %>
    <%= render "share/error_messages", model: f.object %>
    <div id="event">
      <div id="event-name">
        <p>イベント名</p>
        <%= f.text_field :name, id:"event-name-input"%>
      </div>
      <div id="event-description">
        <p>詳細</p>
        <%= f.text_area :description, id:"event-description-input" %>
      </div>
    </div>
    <div id="schedule">
      <div id="schedule-title">
        <h3>日程</h3>
      </div>
      <div id="schdule-calender">
        <table id="days">
          <thead>
            <tr>
              <th id="prev">&laquo;</th>
              <th id="title" colspan="5">2020/05</th>
              <th id="next">&raquo;</th>
            </tr> 
            <tr>
              <th>Sun</th>
              <th>Mon</th>
              <th>Tue</th>
              <th>Wed</th>
              <th>Thu</th>
              <th>Fri</th>
              <th>Sat</th>
            </tr>
          </thead>
          <tbody> 
          </tbody>
          <tfoot>
            <tr>
              <td id="today" colspan="7">Today</td>
            </tr>
          </tfoot>
        </table>
      </div>
      <div id="select-days">
        <%= f.fields_for :schedules do |schedule_fields| %>
          <ul id="add-date-style">
            <li class = "date-input">
              <%= schedule_fields.date_field :savedate %>
            </li>
            <li class = "date-time"> 
              <%= schedule_fields.select :savetime, [
                ["00:00~","0:00"], ["00:30~", "0:30"], 
                ["01:00~", "1:00"],["01:30~", "1:30"],
                ["02:00~", "2:00"],["02:30~", "2:30"],
                ["03:00~", "3:00"],["03:30~", "3:30"],
                ["04:00~", "4:00"],["04:30~", "4:30"],
                ["05:00~", "5:00"],["05:30~", "5:30"],
                ["06:00~", "6:00"],["06:30~", "6:30"],
                ["07:00~", "7:00"],["07:30~", "7:30"],
                ["08:00~", "8:00"],["08:30~", "8:30"],
                ["09:00~", "9:00"],["09:30~", "9:30"],
                ["10:00~", "10:00"],["10:30~", "10:30"],
                ["11:00~", "11:00"],["11:30~", "11:30"],
                ["12:00~", "12:00"],["12:30~", "12:30"],
                ["13:00~", "13:00"],["13:30~", "13:30"],
                ["14:00~", "14:00"],["14:30~", "14:30"],
                ["15:00~", "15:00"],["15:30~", "15:30"],
                ["16:00~", "16:00"],["16:30~", "16:30"],
                ["17:00~", "17:00"],["17:30~", "17:30"],
                ["18:00~", "18:00"],["18:30~", "18:30"],
                ["19:00~", "19:00"],["19:30~", "19:30"],
                ["20:00~", "20:00"],["20:30~", "20:30"],
                ["21:00~", "21:00"],["21:30~", "21:30"],
                ["22:00~", "22:00"],["22:30~", "22:30"],
                ["23:00~", "23:00"],["23:30~", "23:30"],
                ], 
                  {include_blank: "選択",selected:"19:00"}, class: "date-time" %>
            </li>
            <li id = "delete" >
              <p>削除</p>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
    <div id="store">
      <div id="store-title">
        <h3>店名</h3>
      </div>
      <div id="shop-add-btn">
        <h3>お店追加</h3>
      </div>
      <%= f.fields_for :shops do |shop_fields| %>
        <div id="new-shop-top">
          <div id="new-shop">
            <div id="shop-name-box">
              <div id="shop-name"><p>店名</p></div>
              <%= shop_fields.text_field :shop_name, id:"shop-name-input"%>
            </div>
            <div id="shop-url-box">
              <div id="shop-url"><p>店のURL</p></div>
              <%= shop_fields.text_field :shop_url, id:"shop-url-input"%>
            </div>
            <div id="shop-map-box">
              <div id="shop-map"><p>地図のURL</p></div>
              <%= shop_fields.text_field :map_url, id:"shop-map-input"%>
            </div>
            <div id="shop-comment-box">
              <div id="shop-comment"><p>コメント</p></div>
              <%= shop_fields.text_field :comment, id:"shop-comment-input"%>
            </div>
            <div id="shop-delete-box">
              <p id="shop-delete">お店削除</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div id="submit-box">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>