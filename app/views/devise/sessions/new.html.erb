<div class="contents-in row">
  <div class="container-in">
    <h2 class="log-in">ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Eメール",class:"field-form" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"field-form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード",class:"field-form" %><br />
        <%= f.password_field :password, autocomplete: "current-password",class:"field-form" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン",class:"btn-flat-border-sign-up" %>
      </div>
    <% end %>
  </div>
</div>