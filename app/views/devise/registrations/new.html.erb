<div class="contents row">
  <div class="container">
    <h2 class="sign-up">サインアップ</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label "ニックネーム", class:"field-form" %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", class:"field-form" %>
      </div>
      <div class="field">
        <%= f.label "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "名前", class:"field-form" %>
      </div>
      <div class="field">
        <%= f.label "Eメール" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード", class:"field-form" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以内）</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"field-form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード(確認用)", class:"field-form" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-form" %>
      </div>
      
      <div class="actions">
        <%= f.submit "新規登録",class:"btn-flat-border-sign-up" %>
      </div>
    <% end %>
 </div>
</div>